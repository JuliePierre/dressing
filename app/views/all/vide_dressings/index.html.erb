<div class="main-body">

  <div class="bg-grey">
    <!-- Sous-navigation -->
    <div class="sub-nav">
      <div class="sub-nav-container">
        <div class="sub-nav-menu">
          <%= link_to 'Accueil', root_path %>
          <i class="fa fa-chevron-right" aria-hidden="true"></i>
          <span class="sub-nav-item">Les vide-dressings publics</span>
        </div>
      </div>
    </div>
    <!-- Sous-navigation -->
    <div class="container">
      <div class="vide-dressings-container">
        <% @vide_dressings.each do |item| %>
          <% if item.photo.nil? %>
            <% bg = "dg4gaietgwflohnmddv0.jpg" %>
          <% else %>
            <% bg = item.photo.path %>
          <% end %>
            <div class="card-large">
              <div class="card-large-picture" style="background-image: linear-gradient(rgba(235, 235, 232, 0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path bg %>');">
                <%= link_to "", user_vide_dressing_path(item.user, item), class: 'card-link' %>
              </div>
              <div class="card-large-infos">
                <div class="card-large-container">
                  <div class="card-large-text">
                    <h2><%= item.name %></h2>
                    <h5><%= item.user.first_name %> <%= item.user.last_name %></h5>
                    <p><%= pluralize item.vide_dressing_items.size, "article" %></p>
                  </div>
                  <div class="btn-container">
                    <%= link_to "Voir", user_vide_dressing_path(item.user, item), class: 'b-btn' %>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
  </div>

  </div>

</div>
