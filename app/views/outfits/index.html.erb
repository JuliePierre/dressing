<div class="main">
  <div class="page-title bg-grey">
    <div class="container">
      <h1>All outfits</h1>
    </div>
  </div>
  <div class="container">
    <div class="padded">
      <div class="row">
        <% @outfits.each do |outfit| %>
          <% pictures = outfit.photos.order(id: :asc) %>
          <%= render 'shared/outfit_card', outfit: outfit, pictures: pictures %>
        <% end %>
      </div>
    </div>
  </div>
</div>
