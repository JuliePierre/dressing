<div class="main-body">
  <div class="bg-grey">
    <div class="container">
      <div class="b-section">
        <div class="vide-dressing-intro">
          <% if @vide_dressing.photo.nil? %>
            <%= cl_image_tag("dressing2_vtjhvf.jpg", width: 400, height: 250, crop: :fill) %>
          <% else %>
            <%= cl_image_tag @vide_dressing.photo.path %>
          <% end %>
          <div class="intro-infos">
            <h2><%= @vide_dressing.name %></h2>
            <p>Créé par <%= @vide_dressing.user.first_name %> <%= @vide_dressing.user.last_name %> le <%= @vide_dressing.created_at.strftime('%e %b %Y') %></p>
            <p><%= pluralize @vide_dressing.vide_dressing_items.size, "pièce" %></p>
          </div>
        </div>
      </div>
    </div>
  <!-- Sous-navigation -->
  <div class="sub-nav">
    <div class="sub-nav-container">
      <div class="sub-nav-menu">
        <span class="sub-nav-item"><%= link_to 'Accueil', root_path %></span>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        <span class="sub-nav-item"><%= link_to "#{@user.first_name} #{@user.last_name}", user_path(@user) %></span>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        <span class="sub-nav-item"><%= @vide_dressing.name %></span>
      </div>
    </div>
  </div>
  <!-- Sous-navigation -->
  <div class="container last-container">
    <div id="vide-dressing-elements-container">
      <% unless @vide_dressing.vide_dressing_items.size == 0 %>
        <% @vide_dressing.vide_dressing_items.each do |item| %>
          <% if item.photos[0].nil? %>
            <% picture = "dress_icon_sfq079.png" %>
          <% else %>
            <% picture = item.photos[0].path %>
          <% end %>
          <div class="vide-dressing-item-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path picture, height: 350, width: 260, crop: :fill %>')">
            <div class="card-description">
              <h2><%= item.name %></h2>
              <p><%= item.category %></p>
            </div>
            <%= link_to "", user_vide_dressing_vide_dressing_item_path(@user, @vide_dressing, item), class: 'card-link' %>
          </div>
        <% end %>
      <% end %>
      <% if @user == current_user %>
        <div class="vide-dressing-item-card add-item-card">
          <%= link_to new_user_vide_dressing_vide_dressing_item_path(@user, @vide_dressing) do %>
            <i class="material-icons">add_box</i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
