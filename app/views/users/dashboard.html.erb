<div class="main-body dashboard-container">
  <div class="sidenav">
    <% photo = current_user.gender == "male" ? 'boy.png' : 'girl.png' %>
    <% avatar_url = current_user.facebook_picture_url || image_path(photo) %>
    <%= image_tag(avatar_url, class: 'user-avatar') %>
    <h4 class="text-center"><%= current_user.first_name.capitalize + " " + current_user.last_name.capitalize %></h4>
    <div class="sidenav-container" id="sidenav-tabs">
      <ul class="sidenav-tabs">
        <li class="tab sidenav-tab"><a href="#tab-moncompte" class="active">Mon compte</a></li>
        <li id="monprofil-link" class="tab sidenav-tab"><a href="#tab-monprofil">Mon profil</a></li>
        <li id="monreseau-link" class="tab sidenav-tab"><a href="#tab-monreseau">Mon r√©seau</a></li>
        <li id="messagerie-link" class="tab sidenav-tab"><a href="#tab-messagerie">Messagerie</a></li>
      </ul>
    </div>
  </div>
  <div class="dashboard-content-right bg-grey">
    <div class="full-height">

      <!-- TAB MON COMPTE -->
      <%= render "users/dashboard_tabs/mon_compte" %>

      <!-- TAB MON PROFIL -->
      <%= render "users/dashboard_tabs/mon_profil" %>

      <!-- TAB MON RESEAU -->
      <%= render "users/dashboard_tabs/mon_reseau" %>

      <!-- TAB MESSAGERIE -->
      <%= render "users/dashboard_tabs/messagerie" %>

    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <script>
    $(document).ready(function(){
      $('ul.sidenav-tabs').tabs();
      $('ul.network-nav-tabs').tabs();
      $('ul.loans-nav-tabs').tabs();
      $('select').material_select();
    });
  </script>
<% end %>
