<%= simple_form_for(outfit) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, input_html: { placeholder: "Donnez-lui un nom" } %>
  <%= f.input :ceremony, input_html: { placeholder: "La cérémonie" } %>
  <%= f.file_field :photo, :input_html => {:accept => "image/*", :capture => "capture"} %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= hidden_field_tag(:ceremony_id, "") %>
  <%= f.button :submit, class: 'highlight-btn' %>
<% end %>
