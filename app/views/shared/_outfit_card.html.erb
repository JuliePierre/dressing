<div class="col s12 m6 l4">
  <div class="outfit-card">
    <%= link_to '', outfit_path(outfit), class: 'card-link' %>
    <div class="outfit-picture">
      <%= cl_image_tag pictures[0].path %>
    </div>
    <div class="outfit-description">
      <p class="outfit-owner"><%= outfit.name %></p>
      <i class="fa fa-gift" aria-hidden="true"></i>
      <p class="outfit-occasion"><%= Ceremony.find(outfit.ceremony_id).name %></p>
    </div>
  </div>
</div>
