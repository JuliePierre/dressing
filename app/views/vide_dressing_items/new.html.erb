<div class="main-body">
  <div class="bg-grey">
    <div class="container">
      <div class="b-section">
        <h2 class="text-center">Proposer une pièce</h2>
          <div class="flex-form-container">
            <div id="add-item-container" class="bg-white">
            <%= simple_form_for [@user, @vide_dressing, @vide_dressing_item], html: { id: "new-vide-dressing-form" } do |f| %>
              <%= f.error_notification %>

              <%= f.input :name, placeholder: "Nom" %>
              <select class="select optional initialized" name="vide_dressing_item[gender]" id="vide_dressing_item_gender">
                <option value="" class="select-placeholder">Genre</option>
                <option value="Homme">Homme</option>
                <option value="Femme">Femme</option>
              </select>
              <select class="select optional initialized" name="vide_dressing_item[category]" id="vide_dressing_item_category">
                <option value="" class="select-placeholder">Catégorie</option>
                <option value="Robe">Robe</option>
                <option value="Top">Top</option>
                <option value="Veste">Veste</option>
                <option value="Pantalon">Pantalon</option>
                <option value="Jupe">Jupe</option>
                <option value="Combinaison">Combinaison</option>
                <option value="Blouse">Blouse</option>
                <option value="Manteau">Manteau</option>
                <option value="Chaussures">Chaussures</option>
                <option value="Chapeau">Chapeau</option>
                <option value="Pochette">Pochette</option>
                <option value="Bandeau">Bandeau</option>
                <option value="Collier">Collier</option>
              </select>
              <%#= f.input :gender, placeholder: "Genre", collection: VideDressingItem::GENDER %>
              <%#= f.input :category, placeholder: "Categorie", collection: VideDressingItem::CATEGORY %>
              <%= f.input :color, placeholder: "Couleur" %>
              <%= f.input :size, placeholder: "Taille" %>
              <%= f.input :price, placeholder: "Prix" %>

              <%= f.button :submit, class: 'b-btn', value: "Valider et poursuivre" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
        $('select').material_select();
      });
  </script>
<% end %>
