<div class="main-body">
  <!-- Sous-navigation -->
  <div class="sub-nav">
    <div class="sub-nav-container">
      <div class="sub-nav-menu">
        <span class="sub-nav-item"><%= link_to 'Accueil', root_path %></span>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        <span class="sub-nav-item"><%= link_to "Les vide-dressings de #{@item.vide_dressing.user.first_name}", user_path(@item.vide_dressing.user) %></span>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        <span class="sub-nav-item"><%= link_to @item.vide_dressing.name, user_vide_dressing_path(@item.vide_dressing.user, @item.vide_dressing) %></span>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        <span class="sub-nav-item"><%= @item.name %></span>
      </div>
    </div>
  </div>
  <!-- Sous-navigation -->
  <div class="container">
    <div id="vide-dressing-item-container">
      <div class="item-main-picture">
        <%= cl_image_tag @item.photos[0].path %>
      </div>
      <div class="item-infos-container">
        <div class="item-other-pictures">
          <% if @item.photos.size > 1 %>
            <% @item.photos[1..@item.photos.length-1].each do |photo| %>
              <%= cl_image_tag photo.path %>
            <% end %>
          <% end %>
          <% unless current_user.nil? %>
            <% if current_user == @item.vide_dressing.user %>
              <div class="add-item-card">
                <%= link_to "#" do %>
                  <i class="material-icons">add_box</i>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="item-infos">
          <h2><%= @item.name %></h2>
          <p><%= @item.gender %></p>
          <p><%= @item.category %></p>
          <p><%= @item.price %>â‚¬</p>
        </div>
      </div>
    </div>
  </div>
</div>
